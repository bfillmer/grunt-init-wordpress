{
  "name": "{%= theme_folder %}",
  "version": "{%= version %}",
  "devDependencies": {
    "grunt": "~0.4.1",
    "grunt-contrib-sass": "~0.3.0",
    "grunt-contrib-uglify": "~0.2.2",
    "grunt-contrib-watch": "~0.4.4",
    "grunt-contrib-jshint": "~0.6.0",
    "grunt-contrib-connect": "~0.3.0",
    "grunt-imageoptim": "~1.2.6",
    "grunt-svgmin": "~0.2.0",
    "grunt-contrib-copy": "~0.4.1",
    "grunt-contrib-clean": "~0.4.1",
    "grunt-text-replace": "~0.3.6",
    "grunt-symlink": "~0.4.0"
  },
  "path": {
    "scss"        : "src/wp-content/themes/{%= theme_folder %}/css/sass",
    "img"         : "src/wp-content/themes/{%= theme_folder %}/img",
    "js"          : "src/wp-content/themes/{%= theme_folder %}/js",
    "theme"       : "src/wp-content/themes/{%= theme_folder %}",
    "theme_parent": "src/wp-content/themes"
  },
  "props": {
    "theme_folder" : "{%= theme_folder %}",
    "theme_local"  : "{%= theme_local %}",
    "theme_url"    : "{%= homepage %}",
    "theme_version": "{%= version %}",
    "theme_name"   : "{%= title %}",
    "version"      : "{%= version %}",
    "author_name"  : "{%= author_name %}",
    "author_email" : "{%= author_email %}",
    "author_url"   : "{%= author_url %}"
  }
}
